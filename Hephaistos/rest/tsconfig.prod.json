{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "sourceMap": false
  },
  "paths": {
    "*": [
      "node_modules/*",
      "dist/types/*"
    ],
    "@daos": [
      "dist/daos"
    ],
    "@entities": [
      "dist/entities"
    ],
    "@shared": [
      "dist/shared"
    ],
    "@server": [
      "dist/Server"
    ],
    "@dbConnection": [
      "dist/dbConnection"
    ]
  },
  "exclude": [
    "spec",
    "src/**/*.mock.ts",
    "src/public/"
  ]
}
